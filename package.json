{
	"name": "@standard-config/oxlint",
	"version": "1.1.2",
	"description": "Curated Oxlint config with sensible defaults",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/oxlint.git"
	},
	"keywords": [
		"eslint-config-xo",
		"eslint-config-xo-typescript",
		"linter",
		"oxc",
		"oxlint",
		"oxlint-config",
		"oxlint-tsgolint",
		"react",
		"standard-config",
		"type-aware",
		"typescript",
		"xo"
	],
	"files": [
		"dist/**"
	],
	"type": "module",
	"sideEffects": false,
	"exports": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.29.2",
	"dependencies": {
		"rfdc": "^1.4.1"
	},
	"peerDependencies": {
		"oxlint": ">=1.43",
		"oxlint-tsgolint": ">=0.11"
	},
	"peerDependenciesMeta": {
		"oxlint-tsgolint": {
			"optional": true
		}
	},
	"devDependencies": {
		"@standard-config/eslint": "^1.4.1",
		"@standard-config/prettier": "^1.9.1",
		"@standard-config/tsconfig": "^2.0.2",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^10.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"oxlint": "^1.46.0",
		"oxlint-tsgolint": "^0.12.0",
		"prettier": "^3.8.1",
		"publint": "^0.3.17",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"build": "tsdown",
		"fix": "pnpm format && pnpm lint && pnpm format",
		"format": "prettier --ignore-unknown --log-level=warn --write .",
		"format:check": "prettier --check --ignore-unknown .",
		"lint": "oxlint --fix --report-unused-disable-directives --type-aware --type-check && eslint --fix .",
		"lint:check": "oxlint --deny-warnings --report-unused-disable-directives --type-aware --type-check && eslint .",
		"prepack": "pnpm run '/^(format:check|lint:check|test|typecheck)$/' && pnpm build",
		"prepare": "husky",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	}
}
